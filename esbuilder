#!/usr/bin/env
<?php

require_once("vendor/autoload.php");

use Framework\Command\VersionCommand;
use Symfony\Component\Console\Application;

$namespace = "Framework\Command\\";

$application = new Application();

$commandArrays = [
    "AboutCommand",
    "VersionCommand",
    "ControllerCommand",
    "ModelCommand",
    "CacheCommand",
    "MiddlewareCommand",
    "ApiCommand"
];

foreach ($commandArrays as $cmd){
    $command = $namespace . $cmd;
    $application->add(new $command());
}

$application->add($default = new VersionCommand());

// La commande about par dÃ©faut qui prÃ©sente le framework
$application->setDefaultCommand($default->getName());
$application->run();

?>